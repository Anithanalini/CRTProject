
package com.example.Ecommerce;
import java.util.Scanner;
public class TripBudgetPlanner {

	
		
		


		    public static void main(String[] args) {

		        Scanner sc = new Scanner(System.in);

		        double transport, hotel, food, sightseeing, misc;
		        double totalBudget, userBudget;

		        System.out.println("===== Trip Budget Planner =====");

		        System.out.print("Enter your planned budget: â‚¹");
		        userBudget = sc.nextDouble();

		        System.out.print("Enter transport cost: â‚¹");
		        transport = sc.nextDouble();

		        System.out.print("Enter hotel cost: â‚¹");
		        hotel = sc.nextDouble();

		        System.out.print("Enter food cost: â‚¹");
		        food = sc.nextDouble();

		        System.out.print("Enter sightseeing cost: â‚¹");
		        sightseeing = sc.nextDouble();

		        System.out.print("Enter miscellaneous cost: â‚¹");
		        misc = sc.nextDouble();

		        totalBudget = transport + hotel + food + sightseeing + misc;

		        System.out.println("\n----- Budget Summary -----");
		        System.out.println("Transport: â‚¹" + transport);
		        System.out.println("Hotel: â‚¹" + hotel);
		        System.out.println("Food: â‚¹" + food);
		        System.out.println("Sightseeing: â‚¹" + sightseeing);
		        System.out.println("Miscellaneous: â‚¹" + misc);

		        System.out.println("---------------------------");
		        System.out.println("Total Trip Cost: â‚¹" + totalBudget);

		        if (totalBudget <= userBudget) {
		            System.out.println("âœ… You are within your budget!");
		            System.out.println("Remaining Amount: â‚¹" + (userBudget - totalBudget));
		        } else {
		            System.out.println("âŒ Budget exceeded!");
		            System.out.println("Extra Amount Needed: â‚¹" + (totalBudget - userBudget));
		        }

		        System.out.println("\nThank you for using Trip Budget Planner ðŸ˜Š");
		        sc.close();
		    }
		}
